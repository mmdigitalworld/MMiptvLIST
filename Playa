<script>
function playVRVideo(url) {
  const videoEl = document.getElementById('video');
  const vsphere = document.getElementById('vrVideo');
  
  videoEl.src = url;
  videoEl.play();
  
  vsphere.setAttribute('src', '#video');

  // Menü ausblenden
  const menu = document.getElementById('vrMenu');
  menu.setAttribute('visible', false);

  alert("180° 3D SBS Video gestartet! Nutze Controller-Pointer zum Schauen.");
}
</script>

